<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".score_details"
    android:orientation="vertical"
    android:background="#7d75bf"
    >
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        >

        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:background="@drawable/card_style">
            <ProgressBar
                android:id="@+id/probardel"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ProgressBar>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/section_style">

                <TextView
                    android:id="@+id/score_sec_1"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="?"
                    android:textSize="60dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5"
                >
                <LinearLayout
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    >
                    <TextView
                        android:id="@+id/score_sec_1_score"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="?"
                        android:textSize="70dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5"
                    >
                    <LinearLayout
                        android:layout_weight="1.65"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <TextView
                            android:id="@+id/score_match_score"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="Match : ?"
                            android:textAlignment="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="VS"
                            android:textSize="30dp"
                            android:textAlignment="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1.65"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#FF0000"
                            android:text=""
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/score_sec_2_score"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="?"
                        android:textSize="70dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/section_style_l">

                <TextView
                    android:id="@+id/score_sec_2"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="?"
                    android:textSize="60dp"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:background="@drawable/scorebord_style"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Team stats"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/card_style_dark"
            >

        </TextView>


        <LinearLayout

            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_style_dark"
            android:orientation="vertical"
            android:weightSum="7"
            >
            <LinearLayout
                android:layout_weight="6.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Section"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Player name"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Goal time"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="15dp"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ListView
                    android:id="@+id/cardItemList"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </ListView>


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>